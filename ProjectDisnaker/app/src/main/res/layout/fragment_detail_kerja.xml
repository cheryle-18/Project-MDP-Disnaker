<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKerjaFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="500dp"
        android:background="@drawable/circle_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="324dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/circle_light"
        android:backgroundTint="@color/green_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">

        <ImageView
            android:id="@+id/ivBackKerja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Lowongan"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNamaKerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Administrasi Kantor"
            android:textColor="@color/green_900"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvKategoriKerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori: Administrasi"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvNamaPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Perusahaan: PT ABC"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvKuotaKerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Kuota: 10 orang"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Keterangan: lorem ipsum"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Syarat Pendaftaran:"
            android:textColor="@color/black" />

        <ListView
            android:id="@+id/lvSyaratKerja"
            android:layout_width="match_parent"
            android:layout_height="310dp" />

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="daftar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>