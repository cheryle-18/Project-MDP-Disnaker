<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/list_item_shape"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/icon_rounded_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivPelatihan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_work_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamaPekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrasi Kantor"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPerusahaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT XYZ" />

            <TextView
                android:id="@+id/tvKuotaLowongan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Kuota: 5 peserta" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDetailLowongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat selengkapnya..."
            android:textColor="@color/green_900" />

    </LinearLayout>

</LinearLayout>