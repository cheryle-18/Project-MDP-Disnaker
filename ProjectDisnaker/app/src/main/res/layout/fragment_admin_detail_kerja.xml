<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AdminDetailKerjaFragment">

    <ImageView
        android:id="@+id/ivBackDetailLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Lowongan"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvNamaLowongan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Administrasi Kantor"
        android:textColor="@color/green_900"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNamaPerusahaanLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perusahaan: PT ABC"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvKeteranganLowongan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Keterangan: lorem ipsum"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Syarat Pendaftaran:"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/lvSyaratLowongan"
        android:layout_width="match_parent"
        android:layout_height="310dp" />

    <Button
        android:id="@+id/btnLihatPendaftaranAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="lihat pendaftaran" />
</LinearLayout>